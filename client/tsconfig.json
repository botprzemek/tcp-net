{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
